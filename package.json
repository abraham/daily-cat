{
  "name": "daily-cat",
  "version": "1.0.0",
  "description": "A Firebase Function that serves daily cat images from the Unsplash API",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^22.18.6",
    "@vitest/ui": "^3.2.4",
    "firebase-tools": "^14.19.1",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "rollup": "^4.52.3",
    "rollup-plugin-copy": "^3.5.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "start": "firebase emulators:exec \"npm start --prefix functions\" --import=seed --ui",
    "build": "npm run build --prefix functions && rollup -c",
    "deploy": "firebase deploy",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postinstall": "npm ci --prefix functions",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "firebase": "^12.3.0"
  }
}
