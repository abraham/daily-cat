{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "~13.4.0",
    "firebase-functions": "^6.3.2",
    "node-fetch": "^1.7.0"
  },
  "private": true,
  "devDependencies": {
    "@types/node": "^24.0.4",
    "@types/node-fetch": "^2.6.12",
    "@vitest/ui": "^3.2.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"*.json\" \"../public/*.html\" \"../*.json\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" \"*.json\" \"../public/*.html\" \"../*.json\""
  },
  "engines": {
    "node": "8"
  }
}
