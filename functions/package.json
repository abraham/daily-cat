{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "~4.2.1",
    "firebase-functions": "^0.5.7",
    "node-fetch": "^1.7.0"
  },
  "private": true,
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.4",
    "@types/node-fetch": "^2.6.12",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.4",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "fetch-mock": "^5.11.0",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "proxyquire": "^2.1.3",
    "sinon": "^2.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "npm run build && UNSPLASH_CLIENT_ID=test_key ./node_modules/.bin/mocha --reporter spec test/compiled.test.js",
    "test:ts": "UNSPLASH_CLIENT_ID=test_key ./node_modules/.bin/mocha --require ts-node/register test/**/*.ts --reporter spec",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"*.json\" \"../public/*.html\" \"../*.json\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" \"*.json\" \"../public/*.html\" \"../*.json\""
  },
  "engines": {
    "node": "8"
  }
}
